{
	"compilerOptions": {
		"baseUrl": ".",
		"checkJs": false,
		"module": "NodeNext",
		"target": "ES2022",
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "NodeNext",
	},
	"include": [
		"./*.js",
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/node_modules/*",
		"dist"
	]
}