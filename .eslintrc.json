{
	"env": {
		"browser": true,
		"es2022": true,
		"node": true,
		"jest": true
	},
	"plugins": [
		"compat",
		"jsdoc"
	],
	"extends": [
		"eslint:recommended",
		"plugin:compat/recommended",
		"plugin:jsdoc/recommended"
	],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"jsdoc/tag-lines": 0,
		"no-unused-vars": "off",
		"no-prototype-builtins": "off",
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	},
	"settings": {
		"jsdoc": {
			"mode": "typescript",
			"preferredTypes": {
				"object": "Object",
				"responseHandler": "ResponseHandler",
				"responseBody": "ResponseBody",
				"responseStatus": "ResponseStatus",
				"typeConverter": "TypeConverter",
				"propertyTypeConverter": "PropertyTypeConverter"
			},
			"structuredTags": {
				"template": {
					"name": "namepath-defining",
					"type": false
				}
			},
			"tagNamePreference": {
				"augments": {
					"message": "@extends is to be used over @augments as it is more evocative of classes than @augments",
					"replacement": "extends"
				}
			}
		}
	}
}